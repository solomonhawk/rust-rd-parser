{
  "name": "tbl-parser",
  "version": "0.1.0",
  "description": "A WebAssembly-based parser and generator for the TBL (Table) language",
  "main": "pkg/tbl_parser.js",
  "types": "pkg/tbl_parser.d.ts",
  "files": [
    "pkg/"
  ],
  "scripts": {
    "build": "wasm-pack build --target web --features wasm --artifact-dir dist/pkg-web -Z unstable-options",
    "build:nodejs": "wasm-pack build --target nodejs --features wasm",
    "build:bundler": "wasm-pack build --target bundler --features wasm",
    "test": "wasm-pack test --chrome --features wasm-test",
    "test:node": "wasm-pack test --node --features wasm-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/rust-rd-parser.git"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "parser",
    "generator",
    "tbl",
    "rust"
  ],
  "author": "Solomon Hawk <roo@solomonhawk.com>",
  "license": "MIT",
  "devDependencies": {
    "wasm-pack": "^0.12.0"
  }
}
